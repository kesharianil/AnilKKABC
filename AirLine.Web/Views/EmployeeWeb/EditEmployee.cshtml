@model AirLine.Model.Employee

<div class="container p-3 my-3 border">
    <h1>Edit Employee</h1>

    <div class="row">
        <div class="col-sm-6">
            <hr />
            <form asp-action="UpdateEmployee" asp-controller="EmployeeWeb" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EmployeeId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNo" class="control-label"></label>
                    <input asp-for="PhoneNo" class="form-control" />
                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Save" />
                    <a class="btn btn-danger" asp-action="EmployeeList">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@if (ViewBag.updateEmployee != null)
{
    <script>
        alert("@ViewBag.updateEmployee");
    </script>
}




